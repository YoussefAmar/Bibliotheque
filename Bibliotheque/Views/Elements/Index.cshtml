@model IEnumerable<Bibliotheque.Models.Element>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap-utilities.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="/Content/Required.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Background.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Form.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />

    <title>Index</title>
</head>
<body>

    <table class="form-control" style="max-width: max-content; margin-left: auto; margin-right: auto; margin-top: 40px">

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    <h5>@Html.DisplayFor(modelItem => item.Content)</h5>
                </th>
            </tr>

            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdElement }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdElement }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdElement }) |
                    @Html.ActionLink("Do", "LinkCre", new { id = item.IdElement }) |
                    @Html.ActionLink("Undo", "LinkDel", new { id = item.IdElement })
                </td>

                @{Html.RenderAction("Index_Partial", "Links", new { id = item.IdElement });}
            </tr>

        }
        
        <tr>
            <td>
                @if (Model.Any())
                {
                    <hr class="my-4">
                }
                @Html.ActionLink("Add an element", "Create", null, htmlAttributes: new {@class = "btn btn-lg btn-primary"})
            </td>
        </tr>

    </table>
</body>
</html>