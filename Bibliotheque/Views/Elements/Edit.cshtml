@model Bibliotheque.Models.Element

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/bootstrap-utilities.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="/Content/Required.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Background.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Form.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/table.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />

    <title>Edit</title>
</head>
<body>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
<div class="row">
<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
<div class="card card-signin my-5">
<div class="card-body">
<h2 class="card-title text-center">Element</h2>
<form class="form-signin">
<div class="form-label-group">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdElement)
    <div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdCategory, new {htmlAttributes = new {@class = "form-control", @placeholder = "Category"}})
            @Html.ValidationMessageFor(model => model.IdCategory, "", new {@class = "text-danger"})
        </div>
    </div>
</div>
<div class="form-label-group">
    <div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<hr class="my-4">
        <button class="btn btn-lg btn-primary" type="submit">Save</button>
        <button class="btn btn-lg btn-primary right" type="submit" onclick="location.href = '@Url.Action("Main", "Home")';return false;">Home</button>
</form>
</div>
</div>
</div>
</div>
</div>
    }
    
<div>
    @{ Html.RenderAction("Index_Partial", "Categories");}
</div>

</body>
</html>