@model Bibliotheque.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap-utilities.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="/Content/Required.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Background.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Form.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />

    <meta name="viewport" content="width=device-width" />

    <title>Sign In</title>
</head>
<body>


@using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h2 class="card-title text-center">Sign In</h2>
                <form class="form-signin">
                    <div class="form-label-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "Username", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-label-group">
                    <div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Password" ,@class = "form-control",@type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    </div>

                    <div class="form-label-group">
                    <div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email" ,@class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    </div>
            
                            <div class="form-group error">
                                @if (@ViewBag.NotValidUser != null)
                                {

                                    <label> @ViewBag.NotValidUser</label>
                                }
                            </div>
                            <hr class="my-4">
                            <button class="btn btn-lg btn-primary" type="submit">Sign In</button>
                            <button class="btn btn-lg btn-primary right" type="submit" onclick="location.href = '@Url.Action("Login", "Home")';return false;">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

}

</body>
</html>
